<p id="notice"><%= notice %></p>
<div class='row justify-content-center'>
<h1>My Albums</h1>
</div>
<div class='row justify-content-center'>
  <table class='table table-striped table-bordered w-75'>
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col"colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= link_to 'Show', user_album_path(album) %></td>
        <td><%= link_to 'Edit', edit_user_album_path(album) %></td>
        <td><%= link_to 'Destroy', user_album_path(album), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<div class='row justify-content-center'>
<%= link_to 'New Album', new_user_album_path %>
</div>