<p id="notice"><%= notice %></p>
<div class='row justify-content-center'>
  <h1 class='typography-display-3 text-center'>Pictures</h1>
  <br>
</div>
<div class='row justify-content-center'>
  <table class='table table-striped table-bordered w-75'>
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Score</th>
        <th scope="col">Tags</th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pictures.each do |picture| %>
      <tr scope="row" style="height:100px;">
        <td><%= picture.title %></td>
        <td><%= picture.description %></td>
        <td><%= picture.score %></td>
        <td><%= picture.categories.pluck(:name) %></td>
        <td><%= image_tag picture.picture,style: 'height: 400%' rescue 'no picture'%> </td>
        <td><%= button_to 'Show', picture, method: :get, class: 'btn btn-info btn-block' %></td>
        <td><%= button_to 'Edit', edit_picture_path(picture), method: :get, class: 'btn btn-info btn-block' %></td>
        <td><%= button_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-danger btn-block' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class='row justify-content-center'>
  <%= button_to 'New Picture', new_picture_path, method: :get, class: 'btn btn-primary btn-block' %>
</div>
<div id="pg" class="col justify-content-center" style="padding-top: 5rem;">
<%= will_paginate @pictures %>
</div>
</div>
<script>
  var x =document.getElementById("pg").childNodes[1];
  var pagination_lis = document.getElementById("pg").childNodes[1].childNodes[0];
  for(var i = 0; i < pagination_lis.childNodes.length; i=i+2){
    pagination_lis.childNodes[i].childNodes[0].classList.add("page-link");
  }
</script>