<p id="notice"><%= notice %></p>
<div class='row justify-content-center'>
  <h1 class='typography-display-3 text-center'>Categories(tags)</h1>
  <br>
</div>
<div class='row justify-content-center'>
  <table class='table table-striped table-bordered w-75'>
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= button_to 'Show', category, method: :get, class: 'btn btn-info btn-block' %></td>
        <td><%= button_to 'Edit', edit_category_path(category), method: :get, class: 'btn btn-info btn-block' %></td>
        <td><%= button_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-danger btn-block' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<div class='row justify-content-center'>
  <%= button_to 'New Category', new_category_path, method: :get, class: 'btn' %>
</div>